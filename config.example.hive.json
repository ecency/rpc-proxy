{
  "targets": {
    "hived": "ws://168.119.70.164:8090",
    "hivemind": "http://168.119.70.164:8080"
  },
  "timeouts": {
    "hived": 10,
    "hivemind": 10
  },
  "routes": {
    "^bridge.(.*)": {
      "target": "hivemind"
    },
    "^database_api.(list_comments|find_comments)$": {
      "target": "hivemind"
    },
    "^database_api.(.*)$": {
      "target": "hived",
      "cache": 0
    },
    "^condenser_api.(get_trending_tags|get_active_votes)$": {
      "target": "hivemind"
    },
    "^condenser_api.(get_dynamic_global_properties|get_feed_history|get_reward_fund|get_accounts|get_account_history|get_follow_count|get_followers)$": {
      "target": "hived",
      "cache": 0
    },
    "^condenser_api.(lookup_accounts|get_vesting_delegations|get_hardfork_version|broadcast_transaction_synchronous|get_following)$": {
      "target": "hived",
      "cache": 0
    }
  },
  "default-cache": 60
}