{
  "targets": {
    "hived": "ws://127.0.0.1:8090",
    "hivemind": "http://127.0.0.1:8080"
  },
  "timeouts": {
    "hived": 10,
    "hivemind": 6
  },
  "routes": {
    "^bridge.get_account_posts$": {
      "target": "hivemind"
    },
    "^condenser_api.(get_follow_count$|get_following|get_followers)$": {
      "target": "hivemind"
    },
    "^bridge.(.*)": {
      "target": "hivemind"
    },
    "^database_api.(list_comments|find_comments)$": {
      "target": "hivemind"
    },
    "^database_api.(.*)$": {
      "target": "hived",
      "cache": 0
    },
    "^condenser_api.(get_trending_tags|get_active_votes|get_content_replies|get_content)$": {
      "target": "hivemind"
    },
    "^condenser_api.(get_dynamic_global_properties|get_feed_history|get_reward_fund|get_accounts|get_account_history)$": {
      "target": "hived",
      "cache": 0
    },
    "^condenser_api.(lookup_accounts|get_vesting_delegations|get_hardfork_version|broadcast_transaction_synchronous)$": {
      "target": "hived",
      "cache": 0
    },
    "^condenser_api.(.*)$": {
      "target": "hivemind"
    },
    "^rc_api.(.*)$": {
      "target": "hived"
    }
  },
  "default-cache": 60
}